[
  {
    "id": "docker-hub",
    "execute-command": "/etc/hooks/trigger-teamcity-build.sh",
    "command-working-directory": "/etc/hooks",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "repository.repo_name"
      },
      {
        "source": "payload",
        "name": "push_data.tag"
      },
      {
        "source": "url",
        "name": "tcBuildTypeId"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "value",
            "value": "{{ getenv "WEBHOOK_AUTH" | js }}",
            "parameter": {
              "source": "url",
              "name": "auth"
            }
          }
        }
      ]
    }
  },
  {
    "id": "slack",
    "execute-command": "/etc/hooks/trigger-teamcity-build.sh",
    "command-working-directory": "/etc/hooks",
    "pass-arguments-to-command": [
      {
        "source": "payload",
        "name": "text"
      }
    ],
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "value",
            "value": "{{ getenv "WEBHOOK_SLACK_TOKEN" | js}}",
            "parameter": {
              "source": "payload",
              "name": "token"
            }
          }
        }
      ]
    }
  }
]
